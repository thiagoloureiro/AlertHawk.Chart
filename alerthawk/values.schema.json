{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AlertHawk Values",
  "description": "Configuration values for AlertHawk Self-Hosted Monitoring Solution",
  "type": "object",
  "properties": {
    "defaultReplicas": {
      "type": "integer",
      "description": "Default number of replicas for all components",
      "default": 1,
      "minimum": 1
    },
    "image": {
      "type": "object",
      "description": "Container images for each component",
      "properties": {
        "monitoring": {
          "type": "string",
          "description": "Monitoring service container image",
          "default": "thiagoguaru/alerthawk.monitoring:3.0.1"
        },
        "auth": {
          "type": "string",
          "description": "Authentication service container image",
          "default": "thiagoguaru/alerthawk.authentication:3.0.2"
        },
        "notification": {
          "type": "string",
          "description": "Notification service container image",
          "default": "thiagoguaru/alerthawk.notification:3.0.1"
        },
        "metrics-api": {
          "type": "string",
          "description": "Metrics API service container image",
          "default": "thiagoguaru/alerthawk.metrics.api:3.0.47"
        },
        "ui": {
          "type": "string",
          "description": "UI service container image",
          "default": "thiagoguaru/alerthawk.ui-demo-v2:3.0.48"
        }
      },
      "required": ["monitoring", "auth", "notification", "metrics-api", "ui"]
    },
    "service": {
      "type": "object",
      "description": "Service configuration",
      "properties": {
        "port": {
          "type": "integer",
          "description": "Service port number",
          "default": 8080,
          "minimum": 1,
          "maximum": 65535
        }
      },
      "required": ["port"]
    },
    "metrics-api": {
      "type": "object",
      "description": "Metrics API service configuration",
      "properties": {
        "replicas": {
          "type": "integer",
          "description": "Number of replicas for metrics-api service",
          "default": 1,
          "minimum": 1
        },
        "env": {
          "type": "object",
          "description": "Environment variables for metrics-api service",
          "properties": {
            "ASPNETCORE_ENVIRONMENT": {
              "type": "string",
              "description": "ASP.NET Core environment (Development, Production, etc.)",
              "default": "Development"
            },
            "CLICKHOUSE_CONNECTION_STRING": {
              "type": "string",
              "description": "ClickHouse database connection string"
            },
            "Sentry__Enabled": {
              "anyOf": [
                {"type": "boolean"},
                {"type": "string"}
              ],
              "description": "Enable Sentry error tracking",
              "default": "false"
            },
            "Sentry__Dsn": {
              "type": "string",
              "description": "Sentry DSN URL"
            },
            "Sentry__Environment": {
              "type": "string",
              "description": "Sentry environment name",
              "default": "Local"
            },
            "SwaggerUICredentials__username": {
              "type": "string",
              "description": "Swagger UI username",
              "default": "admin"
            },
            "SwaggerUICredentials__password": {
              "type": "string",
              "description": "Swagger UI password",
              "default": "admin"
            },
            "AzureAd__ClientId": {
              "type": "string",
              "description": "Azure AD client ID"
            },
            "AzureAd__TenantId": {
              "type": "string",
              "description": "Azure AD tenant ID"
            },
            "AzureAd__ClientSecret": {
              "type": "string",
              "description": "Azure AD client secret"
            },
            "AzureAd__Instance": {
              "type": "string",
              "description": "Azure AD instance URL"
            },
            "Jwt__Key": {
              "type": "string",
              "description": "JWT signing key"
            },
            "Jwt__Issuers": {
              "type": "string",
              "description": "JWT issuers (comma-separated)"
            },
            "Jwt__Audiences": {
              "type": "string",
              "description": "JWT audiences (comma-separated)"
            },
            "Logging__LogLevel__Default": {
              "type": "string",
              "description": "Default log level",
              "default": "Warning"
            },
            "Logging__LogLevel__Microsoft.IdentityModel.LoggingExtensions.IdentityLoggerAdapter": {
              "type": "string",
              "description": "Identity logger log level",
              "default": "Critical"
            }
          }
        }
      }
    },
    "ui": {
      "type": "object",
      "description": "UI service configuration",
