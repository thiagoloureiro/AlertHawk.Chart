            "Jwt__Issuers": {
              "type": "string",
              "description": "JWT issuers (comma-separated)"
            },
            "Jwt__Audiences": {
              "type": "string",
              "description": "JWT audiences (comma-separated)"
            },
            "AUTH_API_URL": {
              "type": "string",
              "description": "Authentication API URL"
            },
            "CACHE_PARALLEL_TASKS": {
              "anyOf": [
                {"type": "integer"},
                {"type": "string"}
