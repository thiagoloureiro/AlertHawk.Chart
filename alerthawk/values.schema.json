              "default": "Warning"
            },
            "Logging__LogLevel__Microsoft.IdentityModel.LoggingExtensions.IdentityLoggerAdapter": {
              "type": "string",
              "description": "Identity logger log level",
              "default": "Critical"
            },
            "Downsampling__Active": {
              "anyOf": [
                {"type": "boolean"},
                {"type": "string"}
              ],
              "description": "Enable downsampling",
              "default": "true"
            },
            "Downsampling__IntervalInSeconds": {
              "anyOf": [
                {"type": "integer"},
                {"type": "string"}
              ],
              "description": "Downsampling interval in seconds",
              "default": "60"
            },
            "DOTNET_SYSTEM_GLOBALIZATION_INVARIANT": {
              "anyOf": [
                {"type": "boolean"},
                {"type": "string"}
              ],
              "description": "Disable .NET globalization",
              "default": "false"
            },
            "CHECK_MONITOR_AFTER_CREATION": {
              "anyOf": [
                {"type": "boolean"},
                {"type": "string"}
              ],
              "description": "Check monitor after creation",
              "default": "true"
            },
            "QueueType": {
              "type": "string",
              "description": "Queue type (RABBITMQ, etc.)",
              "default": "RABBITMQ"
            },
            "ServiceBus__ConnectionString": {
              "type": "string",
              "description": "Azure Service Bus connection string"
            },
            "ServiceBus__QueueName": {
              "type": "string",
              "description": "Azure Service Bus queue name",
              "default": "notifications"
            }
          }
        }
